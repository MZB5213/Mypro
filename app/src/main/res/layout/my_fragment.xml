<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/xx"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/xx"
        app:layout_editor_absoluteY="50dp"
        app:layout_editor_absoluteX="50dp"
        android:id="@+id/head_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/xx"
        app:layout_editor_absoluteY="50dp"
        android:layout_margin="10dp"
        android:text="@string/app_name"
        app:layout_constraintLeft_toRightOf="@id/head_image"
        android:id="@+id/name_myname"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editor"
        android:background="@null"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_myname"
        app:layout_constraintLeft_toRightOf="@id/head_image"
        android:hint="点击编辑个人信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/fgx"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/head_image"
        android:gravity="center"
        android:background="#a29d9d"
        android:layout_width="match_parent"
        android:layout_height="5dp" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/line1"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/fgx"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sc_count"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/histroy_count"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gz_count"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/pl_count"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_collection"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@mipmap/xx"
            android:text="搜藏"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_histroy"
            android:drawableLeft="@mipmap/hestroy"
            android:text="历史"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_focus"
            android:drawableLeft="@mipmap/gz"
            android:text="关注"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_comments"
            android:drawableLeft="@mipmap/pl2"
            android:text="评论"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/fgx2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#d1cfcf"
        app:layout_constraintTop_toBottomOf="@id/line2"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/line3"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/fgx2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="消息通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/my_navition"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:background="#d3d0d0"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <RelativeLayout
        android:id="@+id/line4"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="我的话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/my_topic"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fgx3"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:background="#d1cfcf"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/line5"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/fgx3"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="用户设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/setting"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/line5"
        android:background="#d3d0d0"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <RelativeLayout
        android:id="@+id/line6"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/line5"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/feedback"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/line6"
        android:background="#b5b3b3"
        android:layout_width="match_parent"
        android:layout_height="3dp" />



</android.support.constraint.ConstraintLayout>
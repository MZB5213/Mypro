<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/topic_headimg"
        android:src="@mipmap/msc"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/topic_headimg"
        android:id="@+id/tv"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintLeft_toRightOf="@id/topic_headimg"
        android:id="@+id/tv2"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv3"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/topic_headimg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic2"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/pic"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic3"
        android:layout_margin="10dp"
        app:layout_constraintRight_toLeftOf="@id/pic"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_width="120dp"
        android:layout_height="100dp" />









</android.support.constraint.ConstraintLayout>
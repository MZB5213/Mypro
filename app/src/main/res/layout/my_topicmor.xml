<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:padding="10dp"
        android:textSize="20sp"
        android:text="time"
        android:layout_margin="10dp"
        android:id="@+id/topic_headimg"
        android:src="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintRight_toRightOf="parent"
       android:padding="10dp"
        android:id="@+id/tv"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00f"
        android:text="编辑"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv3"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/topic_headimg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic2"
        android:layout_margin="10dp"
        app:layout_constraintRight_toLeftOf="@id/pic"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <ImageView
        android:src="@mipmap/msc"
        android:id="@+id/pic3"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/pic"
        android:layout_width="120dp"
        android:layout_height="100dp" />

        <TextView
            app:layout_constraintLeft_toRightOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@id/pic"
            android:id="@+id/number1"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pic"
            android:id="@+id/number2"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="50dp"
            app:layout_constraintRight_toLeftOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@id/pic"
            android:id="@+id/number3"
            android:gravity="center"
            android:text="5"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="40dp"
            android:id="@+id/y"
            app:layout_constraintRight_toLeftOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@id/number2"
            android:text="阅读"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number2"
            android:text="点赞"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toRightOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@id/number2"
            android:text="评论"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






</android.support.constraint.ConstraintLayout>
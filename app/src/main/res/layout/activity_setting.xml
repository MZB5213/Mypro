<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:text="设置"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/setting_back"
        android:src="@mipmap/em_mm_title_back"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:id="@+id/lin1"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="7dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="个人设置"
        app:layout_constraintTop_toBottomOf="@id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/Go_1"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/goback"
        app:layout_constraintTop_toBottomOf="@id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_1"
        android:id="@+id/lin2"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/lin2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="清除缓存"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />


    <TextView
        android:id="@+id/setting_cachesize"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="0M"
        app:layout_constraintRight_toLeftOf="@id/Go_2"
        app:layout_constraintTop_toBottomOf="@id/lin2"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/Go_2"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/goback"
        app:layout_constraintTop_toBottomOf="@id/lin2"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_2"
        android:id="@+id/lin3"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--<TextView-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="20sp"-->
        <!--android:text="0M"-->
        <!--app:layout_constraintRight_toLeftOf="@id/Go_2"-->
        <!--app:layout_constraintTop_toBottomOf="@id/lin2"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="60dp" />-->

    <TextView
        app:layout_constraintTop_toBottomOf="@id/lin3"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="字体大小"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/Go_3"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/goback"
        app:layout_constraintTop_toBottomOf="@id/lin3"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_3"
        android:id="@+id/lin4"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:text="仅WIFI网络下载图片"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/lin4"
        tools:layout_editor_absoluteX="0dp" />

    <Switch
        android:id="@+id/setting_clear"
        app:layout_constraintRight_toLeftOf="@id/Go_4"
        app:layout_constraintTop_toBottomOf="@id/lin4"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />


    <ImageView
        android:id="@+id/Go_4"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/goback"
        app:layout_constraintTop_toBottomOf="@id/lin4"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_3"
        android:id="@+id/lin5"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_4"
        android:id="@+id/lin6"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/lin6"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="关于"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/Go_5"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/goback"
        app:layout_constraintTop_toBottomOf="@id/lin6"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/Go_5"
        android:id="@+id/lin7"
        android:background="#e4e1e1"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:background="#f00"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/lin7"
        android:text="退出登录"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>